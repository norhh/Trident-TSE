#!/usr/bin/env bash

PROGRAM=test

cd "$(dirname "${BASH_SOURCE[0]}")"

TRIDENT_CC="$(realpath ../../main/trident-cc)"

if [ -f "$PROGRAM" ]; then
   make clean
fi

rm -rf klee-*

CC="$TRIDENT_CC" make -e
extract-bc "$PROGRAM"

klee --posix-runtime --libc=uclibc --write-smt2s --output-dir=klee-t1 "${PROGRAM}.bc"

#python3.6 ../../main/synthesis.py --tests t1.smt2:klee-t1 --components components/*.smt2 --depth 2

#python3.6 ../../main/synthesis.py --tests t1.smt2:klee-t1 --verify L8:patch.smt2

#python3.6 ../../main/synthesis.py --tests t1.smt2:klee-t1 --components components/*.smt2 ../../components/addition.smt2 ../../components/constant_a.smt2 --verify L8:patch.json

python3.6 ../../main/synthesis.py --tests t1.smt2:klee-t1 --components components/*.smt2 ../../components/addition.smt2 ../../components/constant_a.smt2 --all